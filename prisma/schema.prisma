generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  lastUpdated   DateTime?   @default(now())
  image         String
  price         Float
  status        ItemStatus  @default(UPDATED)
  link          String      @unique
  itemRefreshId String      @db.ObjectId
  itemRefresh   ItemRefresh @relation(fields: [itemRefreshId], references: [id])
}

model ItemRefresh {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  lastUpdated DateTime? @default(now())
  Item Item[]
}

enum ItemStatus {
  REQUIRES_FETCH
  UPDATED
}
