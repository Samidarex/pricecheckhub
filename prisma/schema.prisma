generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  lastUpdated DateTime? @default(now())
  image     String
  price     Float
  status ItemStatus @default(REQUIRES_FETCH)
  link      String   @unique
}

enum ItemStatus {
  REQUIRES_FETCH
  UPDATED
}